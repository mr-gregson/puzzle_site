# Application Settings
FLASK_ENV=production
SECRET_KEY=your-very-secure-secret-key-here-generate-random-64-chars

# Database Configuration
# For production, use PostgreSQL or MySQL instead of SQLite
DATABASE_URL=postgresql://username:password@localhost/puzzle_site_prod
# DATABASE_URL=mysql://username:password@localhost/puzzle_site_prod

# Email Configuration
# For Gmail, use smtp.gmail.com with port 587 and TLS enabled
# You'll need to generate an "App Password" in your Gmail account settings
MAIL_SERVER=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=apikey          # literal string 'apikey'
MAIL_PASSWORD=YOUR_SENDGRID_API_KEY
MAIL_DEFAULT_SENDER=your-verified-sender@yourdomain.com

# If using SendGrid Web API instead of SMTP:
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY
MAIL_PROVIDER=sendgrid

# Admin email for system notifications
PUZZLE_SITE_ADMIN=admin@yourdomain.com

# Logging Configuration
LOG_LEVEL=INFO

# Optional: External service configurations
# SENTRY_DSN=https://your-sentry-dsn-here